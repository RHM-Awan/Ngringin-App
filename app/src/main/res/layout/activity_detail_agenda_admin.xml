<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context=".activity.user.DetailAgendaUserActivity">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		android:padding="25dp"
		android:orientation="vertical">
		<TextView
			android:id="@+id/tv_judul"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:layout_marginBottom="10dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="10dp">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Waktu Mulai"/>
			<TextView
				android:id="@+id/tv_mulai"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textStyle="bold"
				tools:text="16.00 17 Nov 2021"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="20dp">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Waktu Selesai"/>
			<TextView
				android:id="@+id/tv_selesai"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textStyle="bold"
				tools:text="17.30 17 Nov 2021"/>
		</LinearLayout>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Keterangan Tambahan"
			android:layout_marginBottom="10dp"/>
		<TextView
			android:id="@+id/tv_keterangan"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="Keterangan Tambahan Agenda"
			android:textStyle="bold"
			android:layout_marginBottom="20dp"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Lokasi"
			android:layout_marginBottom="10dp"/>
		<TextView
			android:id="@+id/tv_lokasi"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="Masjid Al-Hidayah, Ngringin,"
			android:textStyle="bold"
			android:layout_marginBottom="15dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<Button
				android:id="@+id/btn_hapus"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_margin="15dp"
				android:text="hapus"/>
			<Button
				android:id="@+id/btn_edit"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_margin="15dp"
				android:text="edit"/>
		</LinearLayout>
	</LinearLayout>
	<Button
		android:id="@+id/btn_lokasi"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="25dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:text="petunjuk lokasi"/>
</androidx.constraintlayout.widget.ConstraintLayout>